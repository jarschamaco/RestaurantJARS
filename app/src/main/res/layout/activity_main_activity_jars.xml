<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.facci.restaurantjars.MainActivityJARS"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Restaurante JARS"
        android:id="@+id/titulo"
        android:layout_gravity="center_horizontal"
        android:textColor="#0e164b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MenÃº de postres"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="5">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imagen1IB"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:src="@drawable/Septima"
            android:layout_marginTop="10dp"
            android:onClick="OnClick1"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/imagen2IB"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/Segunda"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:onClick="OnClick2"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/imagen3IV"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/Tercera"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:onClick="OnClick3"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/imagen4IB"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/cuatro"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:onClick="OnClick4"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/imagen5IV"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/Quinta"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:onClick="OnClick5"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/imagen6IB"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/Sexta"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:onClick="OnClick7"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/imagen7IV"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/Primera"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:onClick="click7"/>
    </GridLayout>
</LinearLayout>